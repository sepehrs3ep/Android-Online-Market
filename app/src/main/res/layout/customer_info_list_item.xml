<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:padding="4dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/customer_name_text_view"
            android:background="@android:color/darker_gray"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textStyle="italic|bold"

            android:textSize="30sp"
            android:gravity="left"
            android:textColor="@android:color/white"
            android:textDirection="rtl"
            android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/edit_customer_info_image_view"
                android:src="@drawable/ic_edit_info"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp" />

        </LinearLayout>


        <TextView
            android:id="@+id/province_text_view"
            android:layout_width="match_parent"
            android:gravity="right"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/city_text_view"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/address_text_view"
            android:layout_width="match_parent"
            android:textDirection="rtl"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/call_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/call_number_text_view"
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>







</androidx.cardview.widget.CardView>