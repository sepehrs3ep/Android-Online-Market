<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/start_gradiant"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controller.StartFragment">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/bag_lottie_animation"
        android:layout_width="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="bag.json"
        app:lottie_loop="true"
        app:lottie_repeatMode="reverse"
        app:lottie_scale="@android:integer/config_longAnimTime"

        android:layout_height="match_parent" />
    <com.airbnb.lottie.LottieAnimationView
        app:lottie_fileName="connection.json"
        android:id="@+id/no_internet_lottie_animation"
        app:lottie_loop="true"
        app:lottie_repeatMode="reverse"
        app:lottie_scale="@android:integer/config_longAnimTime"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</FrameLayout>